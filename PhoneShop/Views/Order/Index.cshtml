@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách đơn hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh sách đơn hàng</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">

    <!-- Default box -->
    <div class="card" id="render-content">
        <div class="card-header">
            <div class="card-tools">
                <a href="#" id="filterButton"><i class="fas fa-filter"></i></a>
                <input type="date" id="datefilter" name="datefilter">
            </div>
        </div>
        <div class="d-flex flex-column align-items-center" id="orders-body">
            <div class="spinner-border text-success m-3" role="status"></div>
            <span class="visually-hidden">Loading...</span>
        </div>
        <!-- /.card -->
    </div>
</section>
<!-- /.content -->
@section Scripts {
    <script>
        // Init
        $(document).ready(function () {
            LoadData({ PageNumber: 1 });
        });

        // Function chính dùng để tải dữ liệu
        function LoadData(param) {
            if (param == null) {
                $("#datefilter").val("");
            }

            $.ajax({
                type: "POST",
                dataType: "html",
                url: "/Order/GetOrders",
                data: param,
                async: true,
                success: function (response) {
                    $("#loading").remove();
                    $("#orders-body").remove();
                    $("#orders-paging").remove();
                    $("#render-content").append(response);
                }
            });
        }

        // Xử lý các filter
        $("#datefilter").change(function () {
            var dateElement = $(this).val().split('-');
            dateElement.reverse();
            var stringDate = dateElement.join('/');

            var param = {
                PageNumber: 1,
                CreatedDate: stringDate
            };

            LoadData(param);
        });

        function LoadPage(page) {
            var param = GetFilter();
            param.PageNumber = page;
            LoadData(param);
        }

    </script>
}