@model List<PhoneShop.DataAccess.DTO.Category>
@{
    var code = ViewBag.ErrorCode;
    var message = ViewBag.ErrorMessage;
}

<table class="table">
    <thead>
        <tr>
            <th>CategoryID </th>
            <th>CategoryName </th>
            <th>IconImages </th>
            <th>DisplayStatus </th>
           
        </tr>
    </thead>
    <tbody>
        @if (!string.IsNullOrEmpty(message))
        {
            <tr class="">
                <td colspan="4">
                    <input type="hidden" value="@code" id="txtErrorCodeResponseFromServer" />
                    <input type="hidden" value="@message" id="txtErrorResponseFromServer" />
                </td>
            </tr>
        }
        else
        {
            if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr class="product_index_@item.CategoryID">

                        <td>@item.CategoryID</td>
                        <td>@item.CategoryName</td>
                        <td><img src="@item.IconImages" style="width:100px;height:100px;" /></td>
                        <td>@item.DisplayStatus</td>
                        <td>
                            <a data-productid="@item.CategoryID" onclick="Product_Delete(@item.CategoryID)">
                                <i class="fa fa-trash">Xóa</i>
                            </a>
                        </td>

                    </tr>
                }
            }
        }
    </tbody>
</table>
