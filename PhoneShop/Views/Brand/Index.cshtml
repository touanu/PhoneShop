@section Scripts {
    <script>
        async function loadBrands() {
            const response = await fetch('https://localhost:5001/api/BrandApi');
            const brands = await response.json();
            const tableBody = document.getElementById('brandTableBody');
            tableBody.innerHTML = '';

            brands.forEach(brand => {
                const row = `<tr>
                            <td>${brand.brandID}</td>
                            <td>${brand.brandName}</td>
                            <td>${brand.iconImages}</td>
                            <td>
                                <a href="/Brands/Edit/${brand.brandID}">Edit</a> |
                                <a href="/Brands/Delete/${brand.brandID}">Delete</a>
                            </td>
                        </tr>`;
                tableBody.innerHTML += row;
            });
        }

        loadBrands();
    </script>
}

<h1>Brand List</h1>
<p>
    <a href="/Brands/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Icon</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="brandTableBody">
    </tbody>
</table>