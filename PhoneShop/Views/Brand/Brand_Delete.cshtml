@model DataAccess.Models.Brand

<h1>Delete Brand</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Brand</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.BrandID
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.BrandName
        </dd>
        <dt class="col-sm-2">
            Icon
        </dt>
        <dd class="col-sm-10">
            @Model.IconImages
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BrandID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="/Brands">Back to List</a>
    </form>
</div>